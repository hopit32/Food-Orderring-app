<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/itemfoodCheckout_image"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/itemfoodCheckout_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:text="2"
        android:textColor="#111"
        android:textSize="14dp"

        />

    <TextView
        android:id="@+id/itemfoodCheckout_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:text="x  China Noodles"
        android:textColor="#111"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/itemfoodCheckout_totalItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="$10"
        android:textColor="#111"
        android:textSize="15dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E3E3E3"
        android:layout_below="@id/itemfoodCheckout_image"
        android:layout_marginTop="5dp"/>
</RelativeLayout>