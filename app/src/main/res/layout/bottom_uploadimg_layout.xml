<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_sheet_imgage"
    android:background="@drawable/bottom_layout"
    android:padding="10dp"
    >
    <ImageView
        android:id="@+id/img_gl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/landscape"/>
    <ImageView
        android:id="@+id/icon_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_gl"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/upload"/>
    <TextView
        android:id="@+id/txt_gallery_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#111"
        android:text="Select from Gallery"
        android:layout_toRightOf="@id/img_gl"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/txt_upload_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42dp"
        android:layout_toRightOf="@id/icon_upload"
        android:text="Upload Image"
        android:textColor="#111"
        android:layout_alignTop="@+id/icon_upload"/>


</RelativeLayout>